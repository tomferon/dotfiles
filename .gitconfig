[alias]
	co = checkout
	st = status
	br = branch
	ci = commit
	pf = push --force-with-lease
	pu = push
	fe = fetch --prune
[user]
	name = Tom Feron
	email = tho.feron@gmail.com
[core]
	excludesfile = /home/thoferon/.gitignore_global
	editor = code --wait
[push]
	default = current
[rerere]
	enabled = true
[diff]
	tool = vscode
[difftool "vscode"]
	editor = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED

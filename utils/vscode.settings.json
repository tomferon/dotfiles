{
    "latex-workshop.view.pdf.viewer": "tab",
    "editor.fontLigatures": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "editor.renderWhitespace": "all",
    "markdown.preview.breaks": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabSize": 2,
    "editor.rulers": [
        80
    ],
    "window.restoreFullscreen": true,
    "files.hotExit": "off",
    "editor.wordWrap": "on",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "[python]": {
        "editor.tabSize": 4
    },
    "[csharp]": {
        "editor.tabSize": 4
    },
    "[shellscript]": {
        "editor.tabSize": 4
    },
    "[starlark]": {
        "editor.tabSize": 4
    },
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "python.autoComplete.addBrackets": true,
    "typescript.tsserver.log": "verbose",
    "git.rebaseWhenSync": true,
    "editor.linkedEditing": true,
    "haskell.hlint.run": "onType",
    "files.insertFinalNewline": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "csharp.suppressHiddenDiagnostics": false,
    "omnisharp.enableRoslynAnalyzers": true,
    "editor.minimap.showSlider": "always",
    "omnisharp.path": "v1.37.1",
    "python.insidersChannel": "daily",
    "python.dataScience.disableJupyterAutoStart": true,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "workbench.panel.opensMaximized": "never",
    "editor.tabCompletion": "on",
    "editor.suggest.localityBonus": true,
    "gitlens.statusBar.reduceFlicker": true,
    "tabnine.experimentalAutoImports": true,
    "git.autofetch": true,
    "remote.containers.defaultExtensions": [
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "janjoerke.align-by-regex"
    ],
    "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
    "editor.suggest.showStatusBar": true,
    "haskell.formattingProvider": "stylish-haskell",
    "problems.showCurrentInStatus": true,
    "workbench.editor.limit.enabled": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableBell": true,
    "terminal.integrated.tabs.enabled": true,
    "liveshare.presence": true,
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#dd0531"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#61dafb"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Svelte Orange",
            "value": "#ff3d00"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "terminal.integrated.shellArgs.windows": null,
    "editor.fontFamily": "Cascadia Code",
    "oneDarkPro.italic": false,
    "dotfiles.repository": "tomferon/dotfiles",
    "dotfiles.installCommand": "~/dotfiles/install.sh",
    "dotfiles.targetPath": "~/dotfiles",
    "settingsSync.ignoredSettings": [
        "-dotfiles.targetPath",
        "-dotfiles.repository",
        "-dotfiles.installCommand"
    ],
    "search.exclude": {
        "**/_darcs": true
    },
    "terminal.integrated.scrollback": 10000,
    "haskell.plugin.importLens.codeLensOn": false,
    "haskell.plugin.moduleName.globalOn": false,
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "asciidoc.use_asciidoctor_js": false,
    "python.analysis.completeFunctionParens": true,
    "workbench.preferredLightColorTheme": "GitHub Light Default",
    // "docker.host": "ssh://ubuntu@46.105.96.103",
    // "remote.containers.dockerComposePath": "docker-compose -H ssh://ubuntu@46.105.96.103"
    "workbench.colorCustomizations": {
        // "editorWhitespace.foreground": "#DDDDDD"
        // "terminal.background": "#111111",
    },
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-[>": true
    },
    "workbench.colorTheme": "One Dark Pro",
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "window.titleBarStyle": "native",
    "customizeUI.titleBar": "inline",
    "haskell.manageHLS": "PATH",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock",
        "flake.nix": "flake.lock",
        "cabal.project": "cabal.project.freeze"
    },
    "editor.guides.bracketPairs": "active",
    "workbench.editor.tabCloseButton": "off",
}

